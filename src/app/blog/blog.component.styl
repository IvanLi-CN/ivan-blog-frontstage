#blog {
  align-items: stretch;
  min-height: 100vh;

  aside {
    background-color: rgba(#ddd, .5);
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    width: 350px;

    display: flex;
    flex-flow: column;
    align-items: center;
    justify-content: center;

    & > * {
      margin: 50px;

      &:last-child {
        margin-top: auto;
        margin-bottom: 0;
      }
    }
  }

  main {
    margin-left: 350px;
    display: flex;
    flex-flow: column;

    #main-content {
      flex: auto;
      background-color: rgba(#fafafa, .7);
      margin-bottom: 100px;
    }

    & > footer {
      position: fixed;
      bottom: 0;
      right: 0;
      left: 350px;
      padding: 20px;
      text-align: center;
      z-index: -1;
    }
  }
}
